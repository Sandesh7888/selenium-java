package com.qsp;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

public class SecondDemo {

    WebDriver driver; // declare driver at class level (accessible to all methods)

    public void lunch() throws InterruptedException {
        // Launch Chrome browser
        driver = new ChromeDriver();

        // Open a website
        driver.get("https://www.google.com");

        // Print title
        System.out.println("Page title is: " + driver.getTitle());

        Thread.sleep(2000);
        driver.manage().window().maximize();
    }

    public void Title() {
        // Validate title
        String exp = "welcome to chrome";
        String act = driver.getTitle();

        if (act.equalsIgnoreCase(exp)) {
            System.out.println("Title matched!");
        } else {
            System.out.println("Title did not match. Actual title: " + act);
        }
    }

    public void closeBrowser() {
        driver.quit(); // safely close browser here
    }

    public static void main(String[] args) throws InterruptedException {

        SecondDemo s = new SecondDemo();
        s.lunch();
        s.Title();
        s.closeBrowser();
    }
}
