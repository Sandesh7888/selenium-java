package com.sandesh.me;

import java.io.File;
import java.io.IOException;

import org.openqa.selenium.By;
import org.openqa.selenium.OutputType;
import org.openqa.selenium.TakesScreenshot;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.io.FileHandler;

public class Sadbasics_Exp_12ScreenShot {

    WebDriver driver;

    public void Launch() throws InterruptedException {
        driver = new ChromeDriver();
        driver.get("https://login.salesforce.com/");
        Thread.sleep(2000);
        driver.manage().window().maximize();
    }

    public void Login(String un, String pass) throws InterruptedException {
        driver.findElement(By.id("username")).sendKeys(un);
        Thread.sleep(2000);
        driver.findElement(By.id("password")).sendKeys(pass);
        Thread.sleep(2000);
        driver.findElement(By.id("Login")).click();
    }

    public void ScreenShot(String fileName) throws IOException {
        File src = ((TakesScreenshot) driver).getScreenshotAs(OutputType.FILE);
        File des = new File("C:\\Users\\sande\\OneDrive\\Desktop\\selenium\\java\\ScreenShot\\" + fileName + ".png");
        FileHandler.copy(src, des);
        System.out.println("Screenshot saved at: " + des.getAbsolutePath());
    }

    public static void main(String[] args) throws Exception {
        Sadbasics_Exp_12ScreenShot s = new Sadbasics_Exp_12ScreenShot();
        s.Launch();
        s.Login("sandesh@123", "PAss@123");
        s.ScreenShot("Salesforce_Login_Page");
        s.driver.quit();
    }
}
