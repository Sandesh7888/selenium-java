package com.sandesh.me;

import java.io.File;
import java.util.logging.FileHandler;

import org.openqa.selenium.By;
import org.openqa.selenium.OutputType;
import org.openqa.selenium.TakesScreenshot;
import org.openqa.selenium.WebDriver;

import org.openqa.selenium.chrome.ChromeDriver;

public class Sadbasics_Exp_12ScreenShot {

   
    WebDriver driver;
	public void Launch() throws InterruptedException {
		driver = new ChromeDriver();
		driver.get("https://login.salesforce.com/");
		Thread.sleep(2000);
		driver.manage().window().maximize();
	}
	
	public void Login(String un,String pass) throws InterruptedException {
		driver.findElement(By.id("username")).sendKeys("sandesh@123");
		Thread.sleep(2000);
		driver.findElement(By.id("password")).sendKeys("123455");
		Thread.sleep(2000);
		driver.findElement(By.id("Login")).click();
		
	}

	public void ScreenShot() {
		File src=((TakesScreenshot)driver).getScreenshotAs(OutputType.FILE);
		File des=new File("C:\\Users\\sande\\OneDrive\\Desktop\\selenium\\java\\ScreenShot");
		//merge both variable 
//		FileHandler.copy(src,des);
	}

    public static void main(String[] args) throws InterruptedException {
    	Sadbasics_Exp_12ScreenShot s = new Sadbasics_Exp_12ScreenShot();
        s.Launch();
        s.Login("sandesh@123", "PAss@123");
       

       
    }

}
